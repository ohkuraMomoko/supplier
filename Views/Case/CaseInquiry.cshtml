					        vm.apiDatas.push({
						        date: response.data.Data.CASE_LIST[index].CreateDt,
						        store: response.data.Data.CASE_LIST[index].StoreName,
						        order_sn: response.data.Data.CASE_LIST[index].OrderId,
						        case_sn: response.data.Data.CASE_LIST[index].AppNo,
